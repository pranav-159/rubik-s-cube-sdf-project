#version 460 core

layout(location=0) in vec3 aPos;

out float result;

struct TestCondition{
    int axis;
    float plane1;
    float plane2;
};


uniform TestCondition cond;

void main(){

    if(cond.plane1<=aPos[cond.axis]&& aPos[cond.axis]<=cond.plane2)
        result=1;
    else
        result=0;

}
